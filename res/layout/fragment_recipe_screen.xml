<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_backdrop">

    <!-- The frame layout is here since we will be showing either
    the empty view or the list view.  -->
	<RelativeLayout
	    android:orientation="vertical"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_margin="20dp">
	    
		<Button
		    android:id="@+id/btn_new_recipe"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center"
		    android:layout_marginBottom="40dp"
		    android:layout_marginTop="130dp"
		    android:layout_centerHorizontal="true"
		    android:background="@drawable/action_connect_btn"
		    android:shadowColor="#A8A8A8"
		    android:shadowDx="0"
		    android:shadowDy="0"
		    android:shadowRadius="5"
		    android:text="New Recipe"
		    android:textColor="#FFFFFF"
		    android:textSize="30sp" />

		<Button
		    android:id="@+id/btn_browse_recipes"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_below="@+id/btn_new_recipe"
		    android:layout_centerHorizontal="true"
		    android:background="@drawable/action_connect_btn"
		    android:shadowColor="#A8A8A8"
		    android:shadowDx="0"
		    android:shadowDy="0"
		    android:shadowRadius="5"
		    android:text="Browse Recipes"
		    android:textColor="#FFFFFF"
		    android:textSize="30sp" />
		    
	</RelativeLayout>

</LinearLayout>