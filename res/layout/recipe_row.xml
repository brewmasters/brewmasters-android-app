<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:orientation="vertical"
             android:background="@drawable/custom_shape"
             android:layout_width="fill_parent"
             android:layout_marginTop="10dp"
             android:layout_marginBottom="10dp"
             android:padding="10dp"
             android:layout_height="wrap_content">
             
    	    <TextView
	           android:id="@+id/recipe_name_label"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:layout_alignParentLeft="true"
	           android:layout_centerVertical="true"
	           android:clickable="false"
	           android:focusable="false"
	           android:focusableInTouchMode="false"
	           android:paddingLeft="10dp"
	           android:text="Recipe: "
	           android:textColor="@color/Black"
	           android:textSize="16sp"
	           android:textStyle="bold" />
	        	        
	        <TextView
	            android:id="@+id/recipe_name"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_toRightOf="@id/recipe_name_label"
	            android:layout_marginBottom="20dp"
	            android:layout_marginTop="20dp"
	            android:clickable="false"
	            android:focusable="false"
	            android:layout_centerVertical="true"
	            android:focusableInTouchMode="false"
	            android:text="Name"
	            android:textColor="@color/Black"
	            android:textSize="16sp" />
	        
	       <TextView
	            android:id="@+id/recipe_beer_type_label"
	            android:layout_toRightOf="@id/recipe_name"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:clickable="false"
	            android:focusable="false"
	            android:layout_marginTop="20dp"
	            android:layout_marginBottom="20dp"
	            android:layout_centerVertical="true"
	            android:focusableInTouchMode="false"
	            android:textStyle="bold"
	            android:paddingLeft="10dp"
	            android:text="Type: "
	            android:textColor="@color/Black"
	            android:textSize="16sp" />
	        
	        
	      <TextView
	            android:id="@+id/recipe_beer_type"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_toRightOf="@id/recipe_beer_type_label"
	            android:clickable="false"
	            android:focusable="false"
	            android:layout_marginTop="20dp"
	            android:layout_marginBottom="20dp"
	            android:layout_centerVertical="true"
	            android:focusableInTouchMode="false"
	            android:text="Type"
	            android:textColor="@color/Black"
	            android:textSize="16sp" />
	        



</RelativeLayout>